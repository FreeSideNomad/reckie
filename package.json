{
  "name": "reckie-frontend",
  "version": "1.0.0",
  "description": "Frontend assets for Reckie AI-Native Requirements Engineering Platform",
  "scripts": {
    "build-css": "tailwindcss -i ./app/static/css/input.css -o ./app/static/css/style.css --watch",
    "build-css-prod": "tailwindcss -i ./app/static/css/input.css -o ./app/static/css/style.css --minify",
    "dev": "npm run build-css",
    "build": "npm run build-css-prod"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.0"
  },
  "keywords": ["tailwindcss", "fastapi", "python", "requirements-engineering"],
  "author": "Reckie Team",
  "license": "MIT"
}